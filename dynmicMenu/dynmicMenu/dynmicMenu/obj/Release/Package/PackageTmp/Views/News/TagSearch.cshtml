@model dynmicMenu.Models.Entity.Common;

@{
    ViewBag.Title = "TagSearch";
    Layout = "~/Views/Shared/_PanelLayoutPage.cshtml";
}

<h2>TagSearch</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.n.newstitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.n.news1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.n.date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.SearchedNlist)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.newstitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.news1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detaylar/Ayarlar", "Details", new { id = item.id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.id }) |
                @Html.ActionLink("Görüntüle", "Show", new { id = item.id })
            </td>
        </tr>
    }

</table>
