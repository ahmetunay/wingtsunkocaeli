                @Html.DisplayFor(modelItem => item.menuurl)
            </td>

        </tr>
    }

</table>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ss.submenuname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ss.submenuurl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ss.MainMenu.menuname)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Slist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.submenuname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.submenuurl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MainMenu.menuname)
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detaylar/Ayarlar", "Details", new { id = item.id }) |
                @Html.ActionLink("Sil", "Delete", new { id = item.id }) |
                @Html.ActionLink("Görüntüle", "Show", new { id = item.id })
            </td>
        </tr>
    }

</table>


