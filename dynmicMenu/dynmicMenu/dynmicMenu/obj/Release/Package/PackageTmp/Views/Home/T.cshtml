
@model dynmicMenu.Models.Entity.Common
@{
    ViewBag.Title = "T";
    Layout = "~/Views/Shared/_TLayoutPage.cshtml";
}

<h2>TEST SAYFASI</h2>
<h2>Üst Menüler</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.mm.menuname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.mm.menuurl)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Mlist) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.menuname)
            </td>
