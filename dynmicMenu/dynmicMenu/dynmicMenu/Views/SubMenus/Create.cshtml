@model dynmicMenu.Models.Entity.SubMenu

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_PanelLayoutPage.cshtml";
}




@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h1>Sayfa Oluştur</h1>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.Label("Sayfa İsmi")
    <div class="col-md-10">
        @Html.EditorFor(model => model.submenuname, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.submenuname, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        @Html.Label("Sayfa URL'i")
        <div class="col-md-10">
            @Html.EditorFor(model => model.submenuurl, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.submenuurl, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Metin")
        <div class="col-md-10">
            @Html.EditorFor(model => model.text, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.text, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Bağlı Olacağı Menü")
        <div class="col-md-10">
            @Html.DropDownList("mainmenuid", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.mainmenuid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
